class Solution {
public:
    bool check(string &s , int left , int right) {
        while(left < right) {
            if(s[left] != s[right]) 
                return false;
                left++;
                right--;
        }
        return true;
    }

    int removePalindromeSub(string s) {
        int n = s.size();
        int left = 0;
        int right = n -1;
            if(s.empty()) 
                return 0;
            else if(check(s , left , right)) 
                return 1;
            else 
                return 2;
    }
};