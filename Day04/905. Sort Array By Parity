class Solution {
public:
    vector<int> sortArrayByParity(vector<int>& nums) {
        int n = nums.size();
        int left = 0;
        int right = n - 1;
        vector<int> arr(n);
        for(int i = 0; i < n; i++) {
            if(nums[i] % 2 == 0) {
                arr[left] = nums[i];
                left++;
            }else {
                arr[right] = nums[i];
                right--;
            }
        }
        return arr;
    }
};