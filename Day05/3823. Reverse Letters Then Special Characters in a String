class Solution {
public:
    string reverseByType(string s) {
        int n = s.size();
        int left = 0;
        int right = n - 1;
        while(left < right) {
            while(left < right && !isalpha(s[left])) {
                left++;
            }
            while(left < right && !isalpha(s[right])) {
                right--;
            }
            swap(s[left] , s[right]);
            left++;
            right--;
        }
        left = 0;
        right = n - 1;
        while(left < right) {
            while(left < right && isalnum(s[left])) {
                left++;
            }
            while(left < right && isalnum(s[right])) {
                right--;
            }
            swap(s[left] , s[right]);
            left++;
            right--;
        }
        return s;
    }
};